    // tasks.josn defines quick commands that cam be launched in Visual Studio Code
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "group": "build",
            "label": "Build and run using local Docker",
            "type": "shell",
            "command": "skaffold",
            "args": ["run", "-p", "local", "--default-repo=gcr.io/sanche-testing-project/kubecode"],
            "problemMatcher": []
        },
        {
            "group": "build",
            "label": "Build and run using Google Cloud Build",
            "type": "shell",
            "command": "skaffold",
            "args": ["run", "-p", "staging", "--default-repo=gcr.io/sanche-testing-project/kubecode"],
            "problemMatcher": []
        },
        {
            "label": "View frontend logs",
            "type": "shell",
            "command": "kubectl",
            "args": ["logs", "-l", "tier=frontend"],
            "problemMatcher": []
        },
        {
            "label": "View worker logs",
            "type": "shell",
            "command": "kubectl",
            "args": ["logs", "-l", "tier=worker"],
            "problemMatcher": []
        },
        {
            "label": "View database logs",
            "type": "shell",
            "command": "kubectl",
            "args": ["logs", "-l", "tier=db"],
            "problemMatcher": []
        },
        {
            "label": "Pylint",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pylint", "src/bookshelf"],
            "problemMatcher": []
        }
    ]
}
