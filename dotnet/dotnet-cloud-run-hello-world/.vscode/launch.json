// launch.json contains information needed for the debugger to attach to  processes
// See https://code.visualstudio.com/Docs/editor/debugging#_launch-configurations
// for documentation about how to create and manage configurations
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug on Cloud Run",
      "type": "cloudcode.cloudrun",
      "request": "attach",
      "podSelector": {
        "app": "dotnet-cloud-run-hello-world",
      },
      "localRoot": "${workspaceFolder}",
      "language": "NETCore",
      "remoteRoot": "/src",
      "debugPort": 9229
    },
    {
      "name": "Run on Cloud Run",
      "type": "cloudcode.cloudrun",
      "request": "launch",
      "service": {
        "name": "dotnet-cloud-run-hello-world"
      },
      "build": {
        "image": "cloud-run-dotnet-hello-world",
        "docker": {
        "path": "${workspaceFolder}/Dockerfile",
        },
      },
      "watch": true,
      "cleanUp": true,
      "portForward": true
    },
  ]
}
