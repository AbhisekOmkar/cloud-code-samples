{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run on Kubernetes",
            "type": "cloudcode.kubernetes",
            "request": "launch",
            "skaffoldConfig": "${workspaceFolder}/skaffold.yaml",
            "watch": true,
            "cleanUp": true,
            "portForward": true
        },
        {
            "name": "Attach to Kubernetes (Frontend)",
            "type": "cloudcode.kubernetes",
            "request": "attach",
            "podSelector": {
                "app": "nodejs-guestbook",
                "tier": "frontend"
            },
            "language": "Node",
            "debugPort": 9229,
            "localRoot": "${workspaceFolder}/src/frontend",
            "remoteRoot": "/frontend"
        },
        {
            "name": "Attach to Kubernetes (Backend)",
            "type": "cloudcode.kubernetes",
            "request": "attach",
            "podSelector": {
                "app": "nodejs-guestbook",
                "tier": "backend"
            },
            "language": "Node",
            "debugPort": 9229,
            "localRoot": "${workspaceFolder}/src/backend",
            "remoteRoot": "/backend"
        }
    ]
}
